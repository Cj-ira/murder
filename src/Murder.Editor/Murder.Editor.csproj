<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net7.0</TargetFramework>
    <PublishReadyToRun>false</PublishReadyToRun>
    <TieredCompilation>false</TieredCompilation>
    <DefineConstants>EDITOR;$(DefineConstants)</DefineConstants>
  </PropertyGroup>

  <PropertyGroup>
    <!-- Use the same configuration files from the game. -->
    <ApplicationManifest>..\Murder\Resources\app.manifest</ApplicationManifest>
    <ApplicationIcon>..\Murder\Resources\Icon.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Murder\Murder.csproj" />
  </ItemGroup>

  <PropertyGroup>
    <!-- Use the same configuration as the engine. -->
    <ApplicationManifest>..\Murder\Resources\app.manifest</ApplicationManifest>
    <ApplicationIcon>..\Murder\Resources\Icon.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup Label="Resources">
    <None Update="editor_config_bkp.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="pack_textures.sh">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
