<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net7.0</TargetFramework>
    <PublishReadyToRun>false</PublishReadyToRun>
    <TieredCompilation>false</TieredCompilation>
    <DefineConstants>EDITOR;$(DefineConstants)</DefineConstants>
  </PropertyGroup>

  <PropertyGroup>
    <!-- Use the same configuration files from the game. -->
    <ApplicationManifest>..\Murder\Resources\app.manifest</ApplicationManifest>
    <ApplicationIcon>..\Murder\Resources\Icon.ico</ApplicationIcon>
    <EmbeddedResource>..\Murder\Resources\Icon.bmp</EmbeddedResource>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Murder\Murder.csproj" />
  </ItemGroup>
  
  <ItemGroup Label="Resources">
    <None Update="editor_config_bkp.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>
  
  <ItemGroup>
    <Folder Include="Generated\" />
  </ItemGroup>

  <!-- Generator files -->

  <!-- Generate files! -->
  <Target Name="GenerateFiles" AfterTargets="PostBuildEvent" Condition="'$(Generated)' != 'true' And '$(Configuration)' == 'Debug'">
    <Exec Command="$(OutputPath)Generator -buildWithBinaries $(MSBuildProjectDirectory) $(MSBuildProjectDirectory)\$(OutDir) $(AssemblyName)" Condition="'$(OS)' != 'WINDOWS_NT'" />
    <Exec Command="$(OutputPath)Generator.exe -buildWithBinaries $(MSBuildProjectDirectory) $(MSBuildProjectDirectory)\$(OutDir) $(AssemblyName)" Condition="'$(OS)' == 'WINDOWS_NT'" />

    <!-- After generating these files, build the project again with the generated specs. -->
    <MSBuild Projects="$(MSBuildProjectFile)" Properties="Generated=true" />
  </Target>

</Project>
